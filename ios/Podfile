platform :ios, '13.0'
inhibit_all_warnings!

# Flutter setup
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

def flutter_application_path
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_APPLICATION_PATH\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_APPLICATION_PATH not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

# Pre-install hook to apply code signing fixes (cleanup moved to workflow script)
pre_install do |installer|
  puts "ðŸ”§ Pre-install: Preparing for ultra-aggressive code signing fixes..."
  puts "âœ… Pre-install preparation completed!"
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Ultra-Aggressive Post-Install Hook
post_install do |installer|
  puts "ðŸ”§ Applying ULTRA-AGGRESSIVE code signing fixes to all Pod targets..."
  
  # First, fix the main Pods project to prevent inheritance
  installer.pods_project.build_configurations.each do |config|
    puts "  ðŸ“± Fixing main Pods project: #{config.name}"
    config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
    config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
    config.build_settings['CODE_SIGNING_STYLE'] = 'Automatic'
    config.build_settings['CODE_SIGN_STYLE'] = 'Automatic'
    config.build_settings['PROVISIONING_PROFILE_SPECIFIER'] = ''
    config.build_settings['PROVISIONING_PROFILE'] = ''
    config.build_settings['PROVISIONING_PROFILE_UUID'] = ''
    config.build_settings['PROVISIONING_PROFILE_NAME'] = ''
    config.build_settings['DEVELOPMENT_TEAM'] = ''
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    
    # Additional aggressive settings for main project
    config.build_settings['CODE_SIGNING_REQUIRED[sdk=iphoneos*]'] = 'NO'
    config.build_settings['CODE_SIGNING_ALLOWED[sdk=iphoneos*]'] = 'NO'
    config.build_settings['CODE_SIGNING_REQUIRED[sdk=iphonesimulator*]'] = 'NO'
    config.build_settings['CODE_SIGNING_ALLOWED[sdk=iphonesimulator*]'] = 'NO'
  end
  
  # Then fix ALL individual Pod targets
  installer.pods_project.targets.each do |target|
    puts "  ðŸŽ¯ Fixing Pod target: #{target.name}"
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      puts "    ðŸ“‹ Configuration: #{config.name}"
      
      # ULTRA AGGRESSIVE code signing fixes
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      config.build_settings['CODE_SIGNING_STYLE'] = 'Automatic'
      config.build_settings['CODE_SIGN_STYLE'] = 'Automatic'
      
      # Remove ALL provisioning profile references from Pod targets
      config.build_settings['PROVISIONING_PROFILE_SPECIFIER'] = ''
      config.build_settings['PROVISIONING_PROFILE'] = ''
      config.build_settings['PROVISIONING_PROFILE_UUID'] = ''
      config.build_settings['PROVISIONING_PROFILE_NAME'] = ''
      config.build_settings['PROVISIONING_PROFILE_SPECIFIER[sdk=iphoneos*]'] = ''
      config.build_settings['PROVISIONING_PROFILE[sdk=iphoneos*]'] = ''
      config.build_settings['PROVISIONING_PROFILE_SPECIFIER[sdk=iphonesimulator*]'] = ''
      config.build_settings['PROVISIONING_PROFILE[sdk=iphonesimulator*]'] = ''
      
      # Remove development team and code sign identity from Pod targets
      config.build_settings['DEVELOPMENT_TEAM'] = ''
      config.build_settings['CODE_SIGN_IDENTITY'] = ''
      config.build_settings['CODE_SIGN_IDENTITY[sdk=iphoneos*]'] = ''
      config.build_settings['CODE_SIGN_IDENTITY[sdk=iphonesimulator*]'] = ''
      
      # Set minimum iOS deployment target to 13.0 for all Pods
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET[sdk=iphoneos*]'] = '13.0'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET[sdk=iphonesimulator*]'] = '13.0'
      
      # Disable bitcode for Pods
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Ensure Pod targets don't inherit global code signing settings
      config.build_settings['CODE_SIGN_INJECT_BASE_ENTITLEMENTS'] = 'NO'
      config.build_settings['CODE_SIGN_ENTITLEMENTS'] = ''
      
      # Additional settings to prevent provisioning profile inheritance
      config.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ''
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      
      # Force Pod targets to use automatic signing
      config.build_settings['CODE_SIGN_STYLE'] = 'Automatic'
      
      # Additional aggressive settings for ALL SDK variants
      config.build_settings['CODE_SIGNING_REQUIRED[sdk=iphoneos*]'] = 'NO'
      config.build_settings['CODE_SIGNING_ALLOWED[sdk=iphoneos*]'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED[sdk=iphonesimulator*]'] = 'NO'
      config.build_settings['CODE_SIGNING_ALLOWED[sdk=iphonesimulator*]'] = 'NO'
      
      # Additional aggressive settings to prevent any inheritance
      config.build_settings['CODE_SIGNING_REQUIRED[sdk=*]'] = 'NO'
      config.build_settings['CODE_SIGNING_ALLOWED[sdk=*]'] = 'NO'
      config.build_settings['PROVISIONING_PROFILE_SPECIFIER[sdk=*]'] = ''
      config.build_settings['PROVISIONING_PROFILE[sdk=*]'] = ''
    end
  end
  
  puts "âœ… ULTRA-AGGRESSIVE code signing fixes applied to all Pod targets!"
